declare function local:transfo($bookmark as element(bookmark)) as element(div)
{
  
  <div>
  
  <p>
  <a>{attribute{'href'}{$bookmark/@url/data()}}{$bookmark/title/text()}</a>
  </p>
  <p>{$bookmark/description/text()}</p>
  </div>
  
};
